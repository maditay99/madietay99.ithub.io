

public class nameinitials {
    

    public static void main(String[] args) {
       Scanner scanner = new Scanner(System.in)
       
        System.out.println("What is the initial to your first name?");
        char First_Initial = scanner.next().charAt(0);                              //Save first initial
        
        System.out.println("What is the initial to your last name? ");
        char Last_Initial = scanner.next().charAt(0);                               //Save last initial
        
         // Display the initials
        System.out.println("Your initials are: " + First_Initial + Last_Initial);   //Print first and last initials
 
        scanner.close();
    }
}
